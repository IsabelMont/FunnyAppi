<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pant_menuEnCasa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:backgroundTint="#2196F3"
    tools:context=".MenuEnCasa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_logo2"
            android:layout_width="126dp"
            android:layout_height="76dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/funny"
            tools:srcCompat="@drawable/funny" />

        <ImageView
            android:id="@+id/image_encasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/encasa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/but_AlAzar"
            android:layout_width="254dp"
            android:layout_height="103dp"
            android:layout_marginStart="91dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="168dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:text="Al azar"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

        <Button
            android:id="@+id/but_listaencasa"
            android:layout_width="255dp"
            android:layout_height="108dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="139dp"
            android:backgroundTint="#FFFFFF"
            android:text="Elige"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>