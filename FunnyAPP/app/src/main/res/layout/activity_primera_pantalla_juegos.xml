<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pant_juegos1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#098AF1"
    android:backgroundTint="#2196F3"
    tools:context=".PrimeraPantallaJuegos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/cont_imagppj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_menuFotos"
                android:layout_width="281dp"
                android:layout_height="76dp"
                app:srcCompat="@drawable/menujuegos" />

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/funny"
                tools:srcCompat="@drawable/funny" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/cont_botppj"
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:gravity="center|center_vertical|end"
            android:orientation="vertical">

            <Button
                android:id="@+id/but_JuegoAzar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FAF8F8"
                android:text="Juego al azar"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="24sp" />

            <Button
                android:id="@+id/but_eligeJuego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="192dp"
                android:backgroundTint="#F3ECEC"
                android:foregroundTint="#FAFAFA"
                android:text="Elegir juego"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>