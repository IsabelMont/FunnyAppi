<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Pan_MenuAlAireLibre"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:backgroundTint="#2196F3"
    tools:context=".MenuAlAireLibre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="126dp"
            android:layout_height="76dp"
            app:srcCompat="@drawable/funny"
            tools:srcCompat="@drawable/funny" />

        <ImageView
            android:id="@+id/image_menualairelibre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/imagenalairelibre" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/but_BuscarCerca"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="151dp"
            android:layout_marginEnd="81dp"
            android:backgroundTint="#FFFFFF"
            android:text="Buscar cerca"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:id="@+id/but_Aleatorio"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="154dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="150dp"
            android:backgroundTint="#FFFFFF"
            android:text="Otros"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>